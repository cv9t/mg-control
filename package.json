{
  "name": "mg-control",
  "private": true,
  "version": "1.0.0",
  "repository": "git@github.com:cv9t/mg-control.git",
  "author": "Sviatoslav <sviatoslavnazin@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "npm exec --workspaces -- shx rm -rf node_modules .turbo dist *.log && shx rm -rf node_modules",
    "dev:api": "yarn workspace @mg-control/api run dev",
    "dev:web": "yarn workspace @mg-control/web run dev"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "shx": "^0.3.4",
    "turbo": "^1.9.1"
  }
}
