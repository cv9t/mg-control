{
  "name": "mg-control",
  "private": true,
  "version": "1.0.0",
  "repository": "git@github.com:cv9t/mg-control.git",
  "author": "Sviatoslav <sviatoslavnazin@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js}\"",
    "clean": "npm exec --workspaces -- shx rm -rf node_modules .turbo dist && shx rm -rf node_modules"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "shx": "^0.3.4",
    "turbo": "^1.8.8"
  }
}
